{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "importHelpers": true
  },
  "include": [
    "./src",
    "types/types.d.ts"
  ]
}